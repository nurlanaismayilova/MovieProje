@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>MovieApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <style>
        body {
            margin: 0;
            background-color: #FDFAF6;
            font-family: 'Segoe UI', sans-serif;
        }

        nav {
            background-color: #99BC85;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 40px;
            border-bottom: 1px solid #ccc;
        }

        .navbar-brand {
            font-size: 34px;
            font-weight: bold;
            color: #000000;
            text-decoration: none;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 20px;
        }

            .nav-links li {
                display: inline;
            }

            .nav-links a {
                text-decoration: none;
                color: black;
                font-weight: bold;
                font-size: 20px;
            }

                .nav-links a:hover {
                    color: #EBE3D5;
                }

        .container {
            padding: 20px 40px;
        }
    </style>
</head>
<body>
    <nav>
        <a class="navbar-brand" href="/">MovieApp</a>
        <ul class="nav-links">
            @if (HttpContextAccessor.HttpContext.Session.GetString("Username") != null)
            {
                <li><a href="/Home/Movies">Movies</a></li>
                <li><a href="/Home/Actors">Actors</a></li>
                <li><a href="/Home/Ratings">Ratings</a></li>
                <li><a href="/Home/Genres">Genres</a></li>
                <li><a href="/Home/MovieActors">Movie-Actors</a></li>
                <li><a href="/Wishlist">Wishlist</a></li>
                <li><a href="/Account/Logout">Logout</a></li>
            }
        </ul>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>