<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>MovieApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #fdf6e3;
            font-family: 'Segoe UI', sans-serif;
        }

        nav.navbar {
            background-color: #f5deb3;
        }

        .navbar-brand, .nav-link {
            color: #4b3832 !important;
            font-weight: bold;
        }

        .navbar-nav .nav-link:hover {
            color: #d2691e !important;
        }

        .container {
            padding-top: 20px;
        }

        table.table {
            background-color: #fffaf0;
            border: 1px solid #ccc;
        }

        th {
            background-color: #f0e68c;
            color: #4b3832;
        }

        td {
            color: #333;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light border-bottom shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Movies">MovieApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Movies">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Actors">Actors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Ratings">Ratings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Genres">Genres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="MovieActors">Movie-Actors</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
