@model MovieProject.Models.Wishlist

<h2>Are you sure you want to delete this wishlist item?</h2>

<p>Movie Name: @Model.UserName</p>
<p>Movie ID: @Model.MovieId</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.WishlistId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Wishlist")" class="btn btn-secondary">Cancel</a>
</form>
