@model MovieProject.Models.Wishlist

<h2>Edit Wishlist</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <input type="hidden" name="WishlistId" value="@Model.WishlistId" />
    </div>

    <div class="form-group">
        <label for="UserName">Movie Name</label>
        <input type="text" name="UserName" class="form-control" value="@Model.UserName" required />
    </div>

    <div class="form-group">
        <label for="MovieId">Movie ID</label>
        <input type="number" name="MovieId" class="form-control" value="@Model.MovieId" required />
    </div>

    <button type="submit" class="btn btn-primary">Update Wishlist</button>
</form>
