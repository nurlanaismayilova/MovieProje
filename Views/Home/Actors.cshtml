@model List<MovieProject.Models.Actor>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Actors</title>
    <style>
        table {
            border-collapse: collapse;
            width: 60%;
            margin: 20px auto;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        h2 {
            text-align: center;
        }
    </style>
</head>
<body>
    <h2>Actors</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Actor ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Name</td>
                    <td>@a.Actor_id</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
