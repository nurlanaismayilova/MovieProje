<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Movies</title>
    <style>
        table {
            border-collapse: collapse;
            width: 900px;
            margin: 40px auto;
            font-size: 18px;
            border: 1px solid black;

        }

        th, td {
            border: 1px solid white;
            padding: 14px 20px;
            text-align: center;
            border-radius: 10px;
        }

        th {
            background-color: #B0A695;
            color: black;
            font-size: 20px;
        }

        tbody tr {
            background-color: #F3EEEA;
            height: 133px;
            text-align: center;
        }

        tr:hover {
            background-color: #EBE3D5;
        }

        h2 {
            text-align: center;
            font-size: 28px;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h2>Movies</h2>
    <table>
        <thead>
            <tr>
                <th>Movie_ID</th>
                <th>Genre_ID</th>
                <th>Title</th>
                <th>Release_Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.MovieId</td>
                    <td>@m.GenreId</td>
                    <td>@m.Title</td>
                    <td>@m.ReleaseYear</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
