
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Movies</title>
    <style>
        table {
            border-collapse: collapse;
            width: 60%;
            margin: 20px auto;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        h2 {
            text-align: center;
        }
    </style>
</head>
<body>
    <h2>Movies</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Genre ID</th>
                <th>Title</th>
                <th>Release Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.MovieId</td>
                    <td>@m.GenreId</td>
                    <td>@m.Title</td>
                    <td>@m.ReleaseYear</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
