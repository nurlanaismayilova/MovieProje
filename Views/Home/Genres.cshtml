@model List<MovieProject.Models.Genre>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Genres</title>
    <style>
        table {
            border-collapse: collapse;
            width: 900px;
            margin: 40px auto;
            font-size: 18px;
            border: 1px solid black;
        }

        th, td {
            border: 1px solid white;
            padding: 14px 20px;
            text-align: center;
            border-radius: 10px;
        }

        th {
            background-color: #B0A695;
            color: black;
            font-size: 20px;
        }

        tbody tr {
            background-color: #F3EEEA;
            height: 133px;
            text-align: center;
        }

        tr:hover {
            background-color: #EBE3D5;
        }

        h2 {
            text-align: center;
            font-size: 28px;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h2>Genres</h2>
    <form asp-action="Search" method="get" class="form-inline mb-3">
        <div class="form-group">
            <input type="text" name="query" class="form-control" placeholder="Search movies, actors, genres..." />
        </div>
        <button type="submit" class="btn btn-outline-primary ml-2">Search</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>Genre_ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model)
            {
                <tr>
                    <td>@g.GenreId</td>
                    <td>@g.Name</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
