@model List<MovieProject.Models.Genre>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Genres</title>
    <style>
        table {
            border-collapse: collapse;
            width: 900px;
            margin: 40px auto;
            font-size: 18px;
            border: 1px solid black;
        }

        th, td {
            border: 1px solid white;
            padding: 14px 20px;
            text-align: center;
            border-radius: 10px;
        }

        th {
            background-color: #CAE8BD;
            color: black;
            font-size: 20px;
        }

        tbody tr {
            background-color: #EEF1DA;
            height: 133px;
            text-align: center;
        }


        h2 {
            text-align: center;
            font-size: 28px;
            margin-top: 30px;
        }

        .search-container {
            width: 900px;
            margin: 20px auto;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        .search-form {
            display: flex;
            flex: 1;
            gap: 10px;
        }

            .search-form input[type="text"] {
                flex: 1;
                padding: 8px 12px;
                font-size: 16px;
                border-radius: 6px;
                border: 1px solid #ccc;
            }

            .search-form button {
                padding: 8px 16px;
                font-size: 16px;
                border-radius: 6px;
                border: 1px solid #007bff;
                background-color: white;
                color: #007bff;
                cursor: pointer;
            }

                .search-form button:hover {
                    background-color: #007bff;
                    color: white;
                }

        .back-button {
            padding: 8px 16px;
            font-size: 16px;
            border-radius: 6px;
            border: 1px solid #6c757d;
            background-color: white;
            color: #6c757d;
            text-decoration: none;
            height: fit-content;
        }

            .back-button:hover {
                background-color: #6c757d;
                color: white;
            }
    </style>
</head>
<body>
    <h2>Genres</h2>

    <div class="search-container">
        <form asp-action="Search" method="get" class="search-form">
            <input type="text" name="query" placeholder="Search genre id, name..." />
            <input type="hidden" name="entity" value="genres" />
            <button type="submit">Search</button>
        </form>
        <a asp-action="Genres" class="back-button">Back to All Genres</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>Genre_ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model)
            {
                <tr>
                    <td>@g.GenreId</td>
                    <td>@g.Name</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

