@model List<MovieProject.Models.MovieActor>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Movie - Actor Relationships</title>
    <style>
        table {
            border-collapse: collapse;
            width: 900px;
            margin: 40px auto;
            font-size: 18px;
            border: 1px solid black;
        }

        th, td {
            border: 1px solid white;
            padding: 14px 20px;
            text-align: center;
            border-radius: 10px;
        }

        th {
            background-color: #B0A695;
            color: black;
            font-size: 20px;
        }

        tbody tr {
            background-color: #F3EEEA;
            height: 133px;
            text-align: center;
        }

        tr:hover {
            background-color: #EBE3D5;
        }

        h2 {
            text-align: center;
            font-size: 28px;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h2>Movie - Actor Relationships</h2>
    <table>
        <thead>
            <tr>
                <th>Movie ID</th>
                <th>Movie Title</th>
                <th>Actor ID</th>
                <th>Actor Name</th>

              
<h2>Movie - Actor Relationships</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Movie ID</th>
            <th>Actor ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MovieId</td>
                <td>@item.ActorId</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MovieId</td>
                    <td>@item.MovieTitle</td>
                    <td>@item.ActorId</td>
                    <td>@item.ActorName</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
